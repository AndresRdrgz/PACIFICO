{
  // üß† Experiencia de edici√≥n
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // üö® Validaci√≥n en tiempo real para evitar errores 500 y de plantillas
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.errorSquiggles": "enabled",
  // ‚öôÔ∏è Python y Django
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "venv/Scripts/python.exe",
  // ‚ú® Desactivar formateo autom√°tico en templates Django
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.defaultFormatter": null
  },
  // ‚ö†Ô∏è Mejora para evitar errores de Prettier en JSONC
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // üß© Copilot & AI
  "github.copilot.chat.agent.terminal.allowList": {
    "/.*/": true
  },
  "github.copilot.chat.scopeSelection": false,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  // üß† Mejora la navegaci√≥n de c√≥digo
  "breadcrumbs.enabled": true,
  "explorer.confirmDelete": false,
  // üöÄ Flujo de trabajo
  "workbench.editor.confirmBeforeClose": "never",
  "workbench.startupEditor": "none",
  "files.autoSave": "onWindowChange",
  // üóÇ Organizaci√≥n del explorador
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  // üé® Apariencia
  "workbench.colorTheme": "Default Dark Modern",
  // üìú Otros
  "editor.mouseWheelZoom": true,
  "editor.linkedEditing": true
}